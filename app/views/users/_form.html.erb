<div class='well'>
  <%= form_for @user do |f| %>
    <%= render 'shared/errors', object: @user %>
    <div class='form-horizontal'>
      <div class='form-group'>
        <%= f.label :username, class: "col-md-1 control-label" %>
        <div class = 'col-md-4'>
          <%= f.text_field :username, class: 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :email, class: "col-md-1 control-label" %>
        <div class = 'col-md-4'>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :phone, class: "col-md-1 control-label" %>
        <div class = 'col-md-4'>
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :password, class: "col-md-1 control-label" %>
        <div class = 'col-md-4'>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <div class = 'col-md-offset-1 col-md-4'>
          <%= f.submit (@user.new_record? ? 'Register' : 'Save Profile'), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
